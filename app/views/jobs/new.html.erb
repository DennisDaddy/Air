
<% provide(:title, "Add Job") %>


<section id="registration" class="container">

          <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
              <div class="panel-body">
                  <h3 class="thin text-center">Add New Job</h3>
                  
                  <hr>
					<%= form_for(@job) do |f| %>
					  <%= render 'shared/error_messages', object: f.object %>
					   <div class="top-margin">
					        <%= f.label :title %><span class="text-danger">*</span>
					        <%= f.text_field :title, class: 'form-control' %>       
					    </div>

					    <div class="top-margin">
					     <%= f.label :content %><span class="text-danger">*</span>
					     <%= f.text_area :content, placeholder: "Compose new job..", class: 'form-control' %>
					    </div>

					    <div class="row">        
					                 
					      <%= f.submit "Create Job", class: "btn btn-success" %>
					        
					    </div>
					<% end %>

                </div>
               </div>
            </div>

</section><!--/#registration-->
