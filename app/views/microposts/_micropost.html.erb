
<h3><%= link_to micropost.title, micropost %></h3>

<span class="timestamp">
<i><b>Posted <%= time_ago_in_words(micropost.created_at) %> ago.</b></i>
</span>

<% if current_user?(micropost.user) %>
<%= link_to "Delete", micropost, method: :delete,
data: { confirm: "You sure?" }, class: "btn btn-default" %>
|  <%= link_to "Edit",edit_micropost_path(micropost), class: "btn btn-default" %>
<% end %>

<br>
	<p><%= truncate(micropost.content, length: 100, separator: ''){ link_to 'Read More', micropost_path(micropost) } %></p>

<hr>
